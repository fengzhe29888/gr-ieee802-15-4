<?xml version="1.0"?>
<block>
	<name>IEEE802.15.4 MAC</name>
	<key>ieee802_15_4_mac</key>
	<category>IEEE802.15.4</category>
	<import>import ieee802_15_4</import>
	<make>ieee802_15_4.mac($debug,$mac_addr)</make>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
        <param>
		<name>MAC Address</name>
		<key>mac_addr</key>
		<value>(0xcd, 0xab, 0xff, 0xff, 0x40, 0xe8)</value>
		<type>real_vector</type>
	</param>
	<sink>
		<name>pdu in</name>
		<type>message</type>
	</sink>
	<sink>
		<name>app in</name>
		<type>message</type>
	</sink>
	<source>
		<name>pdu out</name>
		<type>message</type>
	</source>
	<source>
		<name>app out</name>
		<type>message</type>
	</source>

</block>
